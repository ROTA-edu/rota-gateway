# ROTA Gateway Environment Variables
# Copy this file to .env and fill in your values

# Google OAuth 2.0 Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Secret (MUST be at least 32 characters in production)
# Generate with: openssl rand -base64 32
JWT_SECRET=dev-secret-key-change-in-production-min-32-chars

# Database (handled by docker-compose, only needed for external DB)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=rota
# POSTGRES_PASSWORD=rota
# POSTGRES_DB=rota_main

# Redis (handled by docker-compose, only needed for external Redis)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
